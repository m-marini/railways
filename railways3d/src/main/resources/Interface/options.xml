<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <style id="text.bluPanel">
        <attributes font="Fonts/UbuntuMedium.fnt" color="#ffff"
                    align="center" />
    </style>
    <style id="image.bluPanel">
        <attributes filename="Interface/panel.png" height="74"
                    width="300" imageMode="resize:13,3,13,13,13,3,13,3,13,3,13,13" />
    </style>
    <screen id="options">
        <layer backgroundColor="#eeef" childLayout="vertical">
            <panel height="80%" width="*" childLayout="vertical" backgrounColor="#f00f">
            </panel>
            <panel height="20%" width="*" childLayout="vertical" backgrounColor="#0f0f">
            </panel>
        </layer>
    </screen>
</nifty>
