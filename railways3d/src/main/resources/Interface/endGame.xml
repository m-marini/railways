<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

	<useStyles filename="nifty-default-styles.xml" />
	<useStyles filename="Interface/style.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<style id="performance-label">
		<attributes font="Fonts/UbuntuMedium.fnt" color="#ffff" />
	</style>

	<screen id="end-game-screen" controller="org.mmarini.scala.railways.EndGameController">
		<layer backgroundColor="#000f" childLayout="center">
			<effect>
				<onStartScreen name="fade" />
				<onEndScreen name="fade" start="#f" end="#0" />
			</effect>
			<image filename="img/station2.jpg" width="100%" height="100%" />
		</layer>
		<layer backgroundColor="#fffc" childLayout="center">
			<effect>
				<onStartScreen name="fade" />
				<onEndScreen name="fade" start="#f" end="#0" />
			</effect>
			<panel height="80%" width="40%" childLayout="vertical"
				backgroundColor="#0008" padding="10px">
				<image id="quit" style="image.quit" align="left" />
				<panel childLayout="vertical" padding="20px,10px">
					<text text="${bundle.durationLabel}" style="text.end-game-title" />
					<panel childLayout="horizontal">
						<image filename="img/crono.png" style="image.end-game-icon" />
						<panel style="panel.end-game-content">
							<text id="duration" style="text.end-game-value" text="?" />
						</panel>
					</panel>

					<text text="${bundle.arrivalsLabel}" style="text.end-game-title" />
					<panel childLayout="horizontal">
						<image filename="img/arrival-train.png" style="image.end-game-icon" />
						<panel style="panel.end-game-content">
							<text id="income-train" text="?" style="text.end-game-value" />
							<text id="income-train-freq" text="?" style="text.end-game-value" />
						</panel>
					</panel>

					<text text="${bundle.departuresLabel}" style="text.end-game-title" />
					<panel childLayout="horizontal">
						<image filename="img/departure-train.png" style="image.end-game-icon" />
						<panel style="panel.end-game-content">
							<text id="outcome-train" text="?" style="text.end-game-value" />
							<text id="outcome-train-freq" text="?" style="text.end-game-value" />
							<text id="outcome-train-perc" text="?" style="text.end-game-value" />
						</panel>
					</panel>


					<text text="${bundle.errorsLabel}" style="text.end-game-title" />
					<panel childLayout="horizontal">
						<image filename="img/error-train.png" style="image.end-game-icon" />
						<panel style="panel.end-game-content">
							<text id="error-train" text="?" style="text.end-game-value" />
							<text id="error-train-freq" text="?" style="text.end-game-value" />
							<text id="error-train-perc" text="?" style="text.end-game-value" />
						</panel>
					</panel>
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>
