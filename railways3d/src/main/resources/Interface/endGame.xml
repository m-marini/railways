<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

	<useStyles filename="nifty-default-styles.xml" />
	<useStyles filename="Interface/style.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<style id="performance-label">
		<attributes font="Fonts/UbuntuMedium.fnt" color="#ffff" />
	</style>

	<screen id="end-game-screen" controller="org.mmarini.scala.railways.EndGameController">
		<layer childLayout="center">
			<effect>
				<onStartScreen name="fade" />
				<onEndScreen name="fade" start="#f" end="#0" />
			</effect>
			<panel height="80%" width="80%" childLayout="vertical"
				backgroundColor="#000e" padding="30px">
				<text id="title" text="End Game" style="performance-label" />
				<panel childLayout="vertical">
					<text style="performance-label" text="Duration" />
					<text id="duration" style="performance-label" text="???" />
				</panel>
				<panel childLayout="vertical">
					<text text="Errors" style="performance-label" />
					<text id="error-train" text="??? trains" style="performance-label" />
					<text id="error-train-freq" text="??? trains/h" style="performance-label" />
					<text id="error-train-perc" text="??? %" style="performance-label" />
				</panel>
				<panel childLayout="vertical">
					<text text="Arrivals" style="performance-label" />
					<text id="income-train" text="??? trains" style="performance-label" />
					<text id="income-train-freq" text="??? trains/h" style="performance-label" />
				</panel>
				<panel childLayout="vertical">
					<text text="Departures" style="performance-label" />
					<text id="outcome-train" text="??? trains" style="performance-label" />
					<text id="outcome-train-freq" text="??? trains/h" style="performance-label" />
					<text id="outcome-train-perc" text="??? %" style="performance-label" />
				</panel>
				<control id="ok" name="button" label="OK" />
			</panel>
		</layer>
	</screen>
</nifty>
