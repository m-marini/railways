<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <style id="text.bluPanel">
        <attributes font="Fonts/UbuntuMedium.fnt" color="#ffff"
                            align="center" />
    </style>
    <style id="image.bluPanel">
        <attributes filename="Interface/panel.png" height="74"
                            width="300" imageMode="resize:13,3,13,13,13,3,13,3,13,3,13,13" />
    </style>
    <screen id="start">
        <layer backgroundColor="#000f" childLayout="center">
            <image filename="Interface/Stazione-ferroviaria-cinese1.jpg"
                               width="100%" height="100%" />
        </layer>
        <layer backgroundColor="#fffc" childLayout="horizontal">
            <panel height="100%" width="25%" childLayout="vertical">
                <panel height="25%" width="*" childLayout="center">
                    <control name="button" label="Start" id="StartButton" />
                </panel>
                <panel height="25%" width="*" childLayout="center">
                    <control name="button" label="Options" id="OptionsButton" />
                </panel>
                <panel height="25%" width="*" childLayout="center">
                    <control name="button" label="Hall Of Fame" id="HallOfFameButton" />
                </panel>
                <panel height="25%" width="*" childLayout="center">
                    <control name="button" label="Quit" id="QuitButton" />
                </panel>
            </panel>
            <panel width="75%" height="*" childLayout="vertical">
                <panel height="33%" width="*" childLayout="center">
                    <image style="image.bluPanel" />
                    <panel align="center" childLayout="vertical">
                        <text text="Stazione" style="text.bluPanel" />
                        <text id="start-station" text="Jacksonville" style="text.bluPanel" />
                    </panel>
                </panel>
                <panel height="33%" width="*" childLayout="center">
                    <image style="image.bluPanel" />
                    <panel align="center" childLayout="vertical">
                        <text text="Livello" style="text.bluPanel" />
                        <text id="start-level" text="Facile" style="text.bluPanel" />
                    </panel>
                </panel>
                <panel height="33%" width="*" childLayout="center">
                    <image style="image.bluPanel" />
                    <panel align="center" childLayout="vertical">
                        <text text="Durata" style="text.bluPanel" />
                        <text id="start-duration" text="30 min" style="text.bluPanel" />
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="options">
        <layer backgroundColor="#222f" childLayout="center">
        </layer>
    </screen>
</nifty>
