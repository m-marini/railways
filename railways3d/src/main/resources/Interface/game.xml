<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<style id="gridbag">
		<attributes width="64px" height="64px" />
	</style>
	<style id="image.right">
		<attributes filename="Interface/frecce.png" width="64px"
			height="64px" imageMode="subImage:163,84,64,64" />
	</style>
	<style id="image.left">
		<attributes filename="Interface/frecce.png" width="64px"
			height="64px" imageMode="subImage:85,84,64,64" />
	</style>
	<style id="image.down">
		<attributes filename="Interface/frecce.png" width="64px"
			height="64px" imageMode="subImage:85,3,64,64" />
	</style>
	<style id="image.up">
		<attributes filename="Interface/frecce.png" width="64px"
			height="64px" imageMode="subImage:163,3,64,64" />
	</style>

	<popup id="trainPopup" childLayout="absolute-inside"
		controller="org.mmarini.scala.jmonkey.PopupController">
		<interact onClick="closePopup()" onSecondaryClick="closePopup()"
			onTertiaryClick="closePopup()" />
		<panel id="trainPane" x="100" y="300" childLayout="vertical"
			backgroundColor="#0008">
			<image filename="Interface/start.png">
				<interact onClick="onButton(start)" />
			</image>
			<image filename="Interface/stop.png">
				<interact onClick="onButton(stop)" />
			</image>
			<image filename="Interface/reverse.png">
				<interact onClick="onButton(reverse)" />
			</image>
			<image filename="Interface/camera.png">
				<interact onClick="onButton(camera)" />
			</image>
		</panel>
	</popup>

	<popup id="semPopup" childLayout="absolute-inside"
		controller="org.mmarini.scala.jmonkey.PopupController">
		<interact onClick="closePopup()" onSecondaryClick="closePopup()"
			onTertiaryClick="closePopup()" />
		<panel id="semPane" x="100" y="300" childLayout="vertical"
			backgroundColor="#0008">
			<image filename="Interface/sem-green.png">
				<interact onClick="onButton(clear)" />
			</image>
			<image filename="Interface/sem-red.png">
				<interact onClick="onButton(lock)" />
			</image>
		</panel>
	</popup>

	<screen id="game-screen" controller="org.mmarini.scala.railways.GameController">
		<layer childLayout="vertical">
			<panel width="300" height="300" align="right" childLayout="center"
				backgroundColor="#0008" padding="10px">
				<control id="edit_tabs" name="tabGroup">
					<control id="tab_1" name="tab" caption="A">
						<control id="cameras" name="listBox" vertical="optional"
							horizontal="optional" displayItems="8" />
					</control>
					<control id="tab_2" name="tab" caption="B">
					</control>
					<control id="tab_3" name="tab" caption="C">
					</control>
				</control>
			</panel>
		</layer>
		<layer childLayout="vertical">
			<panel />
			<panel childLayout="vertical">
				<panel childLayout="horizontal">
					<panel style="gridbag" childLayout="center" />
					<image style="image.up" visibleToMouse="true">
						<interact onClick="onButton(up)" onRelease="onRelease(up)" />
					</image>
					<panel style="gridbag" childLayout="center" />
				</panel>
				<panel childLayout="horizontal">
					<image style="image.left">
						<interact onClick="onButton(left)" onRelease="onRelease(left)" />
					</image>
					<panel style="gridbag" childLayout="center" />
					<image style="image.right">
						<interact onClick="onButton(right)" onRelease="onRelease(right)" />
					</image>
				</panel>
				<panel childLayout="horizontal">
					<panel style="gridbag" childLayout="center" />
					<image style="image.down">
						<interact onClick="onButton(down)" onRelease="onRelease(down)" />
					</image>
					<panel style="gridbag" childLayout="center" />
				</panel>
			</panel>
		</layer>
	</screen>

</nifty>